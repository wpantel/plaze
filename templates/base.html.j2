<!DOCTYPE html>

<html lang="en" data-bs-theme="dark">
    <head>
        <title>{% block title%} Final Project {% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="static/style.css">
        <script src="static/functions.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href=".">
                    <img src="https://freesvg.org/img/1548005024.png" alt="Logo" width="24" height="24" class="d-inline-block align-text-top">
                    Plaze</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {# Show these items only if the user is logged in #}
                    {% if 'williamp_userID' in session%}
                        {# align on left #}
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                            <a class="nav-link text-light" href="playlists">My Playlists</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-light" href="favsongs">Favorite Songs</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-light" href="search">Search</a>
                            </li>
                        </ul>
                    {% endif %}
                    {# align on right #}
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 login">
                        <li class="nav-item">
                        {% if 'williamp_userID' in session %}
                            <a class="nav-link text-light" href="account">Log Out</a>
                        {% else %}
                            <a class="nav-link text-light" href="account">Log In</a>
                        {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>   
        {% block body%} {% endblock %}
    </body>
</html>
